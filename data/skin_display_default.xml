		<widget source="parent.list" render="Label" position="fill">
			<convert type="StringListSelection"/>
		</widget>
	</screen>
	<screen name="PluginBrowserSummary" position="fill">
		<eLabel text="PLUGINS" position="fill"/>
	</screen>
	<screen name="MovieContextMenuSummary" position="fill">
	   <eLabel text="PLAY" position="fill"/>
	</screen>
	<screen name="MovieSelectionSummary" position="fill">
	   <eLabel text="PLAY" position="fill"/>
	</screen>
	<screen name="MenuSummary" position="fill">
		<eLabel text="MENU" position="fill"/>
		<!--widget source="parent.menu" render="Label" position="fill">
			<convert type="StringListSelection"/>
		</widget-->
	</screen>
	<screen name="StandbySummary" position="fill">
		<widget source="global.CurrentTime" render="Label" position="fill">
			<convert type="ClockToText">VFD</convert>
		</widget>
	</screen>
	<screen name="InfoBarSummary" position="fill">
		<widget source="session.CurrentService" render="ChannelNumber" position="fill"/>
		<!--widget source="session.CurrentService" render="Label" position="fill">
			<convert type="ServiceName">Name</convert>
		</widget-->
	</screen>
	<screen name="InfoBarMoviePlayerSummary" position="fill" >
