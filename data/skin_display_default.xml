	</screen>
	<screen name="SetupSummary" position="fill">
	   <eLabel text="SETUP" position="fill"/>
	   <!--widget source="SetupEntry" render="Label" position="fill"/-->
	</screen>
	<screen name="DVDSummary" position="fill">
		<eLabel text="DVD" position="fill"/>
	</screen>
	<screen name="ServiceScanSummary" position="fill">
		<eLabel text="SCAN" position="fill"/>
	</screen>
	<screen name="RdsInfoDisplaySummary" position="fill">
		<widget source="message" render="Label" noWrap="1" position="fill"/>
	</screen>
</skin>
